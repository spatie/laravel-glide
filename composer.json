{
    "name": "spatie/laravel-glide",
    "description": "Easily convert images with Glide",
    "homepage": "https://github.com/spatie/laravel-glide",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be"
        }
    ],
    "require": {
        "php": "^7.0",
        "illuminate/support": "~5.3.0|~5.4.0|~5.5.0|~5.6.0",
        "league/glide": "^1.0"

    },
    "require-dev": {
        "phpunit/phpunit": "6.*|7.*",
        "orchestra/testbench": "~3.3.0|~3.4.0|~5.5.0|~5.6.0"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Glide\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Glide\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\Glide\\GlideServiceProvider"
            ],
            "aliases": {
                "GlideImage": "Spatie\\Glide\\GlideImageFacade"
            }
        }
    }
}
